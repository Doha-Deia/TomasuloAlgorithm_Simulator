{
    "version": "2.0.0",
    "tasks": [
        {
            "label": "build",
            "type": "shell",
            "command": "g++",
            "args": [
                "-std=c++20",
                "-g",
                "main.cpp",
                "ROB.cpp",
                "ReservationStation.cpp",
                "Instructions.cpp",
                "RegisterStatus.cpp",
                "FunctionalUnit.cpp",
                "-o",
                "simulator",
                "-I."
            ],
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "problemMatcher": ["$gcc"]
        },
        {
            "label": "run",
            "type": "shell",
            "command": "./simulator",
            "group": "test",
            "dependsOn": "build"
        }
    ]
}